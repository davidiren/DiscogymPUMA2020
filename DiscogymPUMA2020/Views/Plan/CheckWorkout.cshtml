@model IEnumerable<DiscogymPUMA2020.Models.Class.WorkoutExercise>
@{
    ViewData["Title"] = "Exercises";
}
<div class="border-bottom">
    <nav class="navbar navbar-expand-md navbar-light ">
        <a asp-action="Index" asp-route-sortOrder="@ViewData["GymSort"]">
            <img src="~/Images/arrow_back-24px.svg" width="30" height="30" class="d-inline-block alignt-top" loading="lazy" />
        </a>
        <h2 class="px-2">@Model.FirstOrDefault().Workout.Name</h2>
    </nav>
</div>

<div class="jumbotron jumbotron-fluid bg-white align-content-center"
    <h5>Exercises</h5>
    @foreach (var item in Model)
    {
        @*<a class="mr-3 btn-link" asp-area="" asp-controller="Plan" asp-action="Index">*@
        <!--asp-action ska bytas till så man kan se planen-->
        <div class="media m-3 shadow border rounded" style="height: 100px; ">
            <img src="~/Images/workout.jpg" class="mr-3 rounded-left" width="100" height="100" />
            <div class="media-body">
                <h5 class="mt-1">@item.Exercise.Name</h5>
                @item.Exercise.Sets x @item.Exercise.Reps | @item.Exercise.Category.Name
            </div>
        </div>
        @*</a>*@
    }
